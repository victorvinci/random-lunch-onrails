
<%= simple_form_for(@restaurant) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :website %>
    <%= f.input :address %>
    <%= f.input :price, collection: ['$', '$$$', '$$$$$', 'Não cabe no VR'] %>
    <%= f.input :cuisine %>
    <%= f.input :food_type, collection: ['PF', 'Delícia', 'Gourmet'] %>
    <%= f.input :photo_url %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
