
<%= simple_form_for(@restaurant) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, label: 'Nome do restaurante'%>
    <%= f.input :description, label: 'Descrição do lugar' %>
    <%= f.input :website, label: 'Website', placeholder: "http://" %>
    <%= f.input :address, label: 'Endereço' %>
    <%= f.input :price, collection: ['$', '$$', '$$$'], label: 'Quanto se gasta aqui?' %>
    <%= f.input :cuisine, label: 'Qual o tipo de cozinha? (Árabe, Padoca, Indiana, etc)' %>
    <%= f.input :food_type, collection: ['PFzão', 'Delicinha', 'Gourmetzada'], label: 'Qual o estilo da comida?' %>
    <%= f.input :photo_url, label: 'Coloque o link com uma foto do lugar (utilize imagens até 1MB)', placeholder: "http://" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Pronto!" %>
  </div>
<% end %>
