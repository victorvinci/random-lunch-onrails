  <section id="restaurant">
    <% @restaurants.sample(1).each do |restaurant| %>
      <div class="restaurant-details">
        <h2 class="title">Hoje a boa Ã©:</h2>
        <h3 class="restaurant-name"><%= link_to restaurant.name, "#{restaurant.website}", :target => "_blank" %></h3>
        <h4 class="restaurant-description"><%= restaurant.description %></h4>

          <section class="about-food">
            <div class="food-info">
              <%= image_tag "fork-and-knife-emoji.png"%>
              <p>
                <%= restaurant.cuisine%> <%= restaurant.food_type%>
              </p>
            </div>

            <div class="food-price">
              <%= image_tag "money.png"%>
              <p>
                <%= restaurant.price%>
              </p>
            </div>
          </section>

        <% if restaurant.photo_url?%>
          <%= image_tag "#{restaurant.photo_url}", :size => "260x180", :class => "lunch-photo" %>
        <% end %>
        <p class="restaurant-address"><address><%= restaurant.address %></address></p>
       <%= link_to 'Edit', edit_restaurant_path(restaurant) %>
      </div>
    <% end %>
  </section>